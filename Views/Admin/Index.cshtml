@model IEnumerable<StarMatrix.Models.Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Admin Users</h2>                
            </div>
            <div class="box-content">

                @*<p>
                    <a asp-action="Create">Create New</a>
                </p>*@
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Roles)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.DateAdded)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ipaddress)
                            </th>*@
                            <th><a class="btn btn-success btn-sm" href="@Url.Action("Create", "Admin")"><i class="glyphicon glyphicon-plus-sign"></i> Add New</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int rowno = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td width="15">
                                    @(rowno += 1).
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Roles)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                @*<td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ipaddress)
                </td>*@
                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Admin", new { id = item.Id})"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                    <a class="btn btn-danger btn-sm" onclick="return confirm('Are sure you want to delete this item?');" href="@Url.Action("DeleteConfirmed", "Admin", new { id = item.Id })"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

