@model IEnumerable<StarMatrix.Models.ShipLocation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>Ship Locations</h2>
            </div>
            <div class="box-content">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tugs)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tugs.BollardPullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tugs.EngineHPName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tugs.ClassTypeName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PresentLocation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Availability)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AvailableLocation)
                            </th>

                            <th><a class="btn btn-success btn-sm" href="@Url.Action("Create", "ShipLocations")"><i class="glyphicon glyphicon-plus-sign"></i> Add New</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int rowno = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(rowno += 1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tugs.TugName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tugs.BollardPullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tugs.EngineHPName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tugs.ClassTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PresentLocation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Availability)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AvailableLocation)
                                </td>

                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "ShipLocations", new { id = item.Id})"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                                    <a class="btn btn-danger btn-sm" onclick="return confirm('Are sure you want to delete this item?');" href="@Url.Action("DeleteConfirmed", "ShipLocations", new { id = item.Id })"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>